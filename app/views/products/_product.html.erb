<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <p class="rating">
    Average Rating: 
    <% if product.avg_rating == 0 %>
      <span>Rate Me!</span>
    <% else %>
      <% product.avg_rating.times do  %>
        <span class="glyphicon glyphicon-star"></span>
      <% end %>
      <% (5 - product.avg_rating).times do  %>
        <span class="glyphicon glyphicon-star-empty"></span>
      <% end %>
    <% end %>
  </p>
  <footer class="actions">
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
  <% if product.sold_out? %>
    <aside class="soldout">
      SOLD OUT!
    </aside>
  <% end %>
</article>
