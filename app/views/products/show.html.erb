<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

    

  <article class="product-detail">

    <% if notice %>
    <div class="alert alert-info" role="alert" id="notice"><%= notice %></div>
    <br/>
    <% end %>

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <br/>
    <br/>

    <div class="row">

      <div class="col-sm-4">
      </div>
      
      <div class="col-sm-8">
        <h3>Reviews</h3>
      </div>    
    </div>

    <% if current_user %>
      <div class="row">

        <div class="col-sm-4">
        </div>
        
        <div class="col-sm-8">
          <%= form_for [@product, @review] do |f| %>
          <h3>New Review</h3>
            <div class="field">
              <div>
                <%= f.text_area :description %>
              </div>
              <div>
                <%= f.select :rating, [['1 Star',1],['2 Stars',2],['3 Stars',3],['4 Stars',4],['5 Stars',5]] %>
              </div>
            </div>
            <br/>
            <div class="actions">
              <%= f.submit %>
            </div>
            <br/>
          <% end %>
        </div>    
      </div>
    <% end %>


    <% if @reviews.length == 0 %>
      <div class="row">

        <div class="col-sm-4">
        </div>

        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt></dt>
            <dd>No reviews yet! Be the first!</dd>
          </dl>
        </div>
      </div>
    <% end %>

    <% @reviews.each do |review| %>
      <%=render 'review', review: review, blankstars: 5-review.rating %>
    <% end %>

  </article>

</section>
